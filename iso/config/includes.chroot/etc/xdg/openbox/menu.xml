<?xml version="1.0" encoding="UTF-8"?>
<!--
  Titan OS V7.0.3 — Desktop Context Menu
  Clean, professional right-click menu
-->
<openbox_menu xmlns="http://openbox.org/3.4/menu">
  <menu id="root-menu" label="Titan OS">
    <separator label="Operations"/>
    
    <item label="Operation Center">
      <action name="Execute">
        <command>python3 /opt/titan/apps/app_unified.py</command>
      </action>
    </item>
    
    <item label="Genesis — Profile Forge">
      <action name="Execute">
        <command>python3 /opt/titan/apps/app_genesis.py</command>
      </action>
    </item>
    
    <item label="Cerberus — Card Validator">
      <action name="Execute">
        <command>python3 /opt/titan/apps/app_cerberus.py</command>
      </action>
    </item>
    
    <item label="KYC — Virtual Camera">
      <action name="Execute">
        <command>python3 /opt/titan/apps/app_kyc.py</command>
      </action>
    </item>
    
    <separator label="Browser"/>
    
    <item label="Titan Browser">
      <action name="Execute">
        <command>bash /opt/titan/bin/titan-browser</command>
      </action>
    </item>
    
    <separator label="System"/>
    
    <item label="Terminal">
      <action name="Execute">
        <command>x-terminal-emulator</command>
      </action>
    </item>
    
    <item label="File Manager">
      <action name="Execute">
        <command>pcmanfm</command>
      </action>
    </item>
    
    <item label="Bug Reporter">
      <action name="Execute">
        <command>python3 /opt/titan/apps/app_bug_reporter.py</command>
      </action>
    </item>
    
    <separator/>
    
    <item label="Shutdown">
      <action name="Execute">
        <command>systemctl poweroff</command>
      </action>
    </item>
    
    <item label="Reboot">
      <action name="Execute">
        <command>systemctl reboot</command>
      </action>
    </item>
  </menu>
</openbox_menu>
