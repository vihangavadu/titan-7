  "providers": {
    "openai": {
      "enabled": true,
      "api_key": "",
      "base_url": "https://api.openai.com/v1",
      "default_model": "gpt-4o-mini",
      "max_retries": 2,
      "timeout": 120
    },
    "anthropic": {
      "enabled": true,
      "api_key": "",
      "base_url": "https://api.anthropic.com/v1",
      "default_model": "claude-3-5-sonnet-20241022",
